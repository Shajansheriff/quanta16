<header id="head" class="secondary"></header>

<!-- container -->
<div class="container">

  <div class="row">

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">
      <header class="page-header">
        <h1 class="page-title">Registration</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Register a new account</h3>
            <p class="text-center text-muted">Lorem ipsum dolor sit amet, <%= link_to 'SignIn', new_user_session_path %> adipisicing elit. Quo nulla quibusdam cum doloremque incidunt nemo sunt a tenetur omnis odio. </p>
            <hr>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
              <!--<div class="top-margin">
                <label>First Name</label>
                <input type="text" class="form-control">
              </div>-->
              <div class="top-margin">
                <label>Name</label>
                <%= f.text_field :name, autofocus: true, class: "form-control", 'required' => 'required' %>
              </div>
              <div class="top-margin">
                <label>Email Address <span class="text-danger">*</span></label>
                <%= f.email_field :email,  class: "form-control",'required' => 'required' %>
              </div>

              <div class="row top-margin">
                <div class="col-sm-6">
                  <label>Password <span class="text-danger">*</span></label>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", class: "form-control",'required' => 'required' %>
                </div>
                <div class="col-sm-6">
                  <label>Confirm Password <span class="text-danger">*</span></label>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",'required' => 'required' %>
                </div>
              </div>
                <div class="top-margin">
                  <label>College <span class="text-danger">*</span></label>
                  <%= f.text_field :college,  class: "form-control", 'required' => 'required' %>
                </div>
                <div class="top-margin">
                  <label>Mobile No.<span class="text-danger">*</span></label>
                  <%= f.text_field :mobile,  class: "form-control", 'required' => 'required' %>
                </div>

              <hr>

              <div class="row">
                <div class="col-lg-8">
                  <!--<label class="checkbox">-->
                    <!--<input type="checkbox">-->
                    <!--I've read the <a href="page_terms.html">Terms and Conditions</a>-->
                  <!--</label>-->
                </div>
                <div class="col-lg-4 text-right">
                  <%= f.submit "Sign up", class: "btn btn-action" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>

    </article>
    <!-- /Article -->

  </div>
</div>	<!-- /container -->

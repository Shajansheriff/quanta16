<header id="head" class="secondary"></header>

<div class="container">
  <div class="row">

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">
      <header class="page-header">
        <h1 class="page-title">Sign in</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Sign in to your account</h3>
            <p class="text-center text-muted">If you are new to Quanta 2016, <%= link_to "Register", new_registration_path(resource_name) %> to create a new account</p>
            <hr>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="top-margin">
                <label>Email <span class="text-danger">*</span></label>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
              <div class="top-margin">
                <label>Password <span class="text-danger">*</span></label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <hr>

              <div class="row">
                <div class="col-lg-8">
                  <b><% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                    <% end -%></b>
                </div>
                <div class="col-lg-4 text-right">
                  <!--<button class="btn btn-action" type="submit">Sign in</button>-->
                  <%= f.submit "Log in", class: "btn btn-action" %>
                </div>
              </div>

                <div class="actions">

                </div>

          <% end %>
          </div>
        </div>

      </div>

    </article>
    <!-- /Article -->

  </div>
</div>

